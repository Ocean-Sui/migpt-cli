{
  "name": "migpt-cli",
  "version": "4.0.0",
  "bin": {
    "migpt": "dist/index.js"
  },
  "files": [
    "dist",
    "migpt.defaults.json"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc -p tsconfig.build.json -m NodeNext && npm run cp-web",
    "dev": "tsc -m NodeNext -w",
    "cp-web": "mkdir -p dist/web/ && cp -rf ../gui-web/dist/* dist/web/",
    "start": "node dist/index.js server"
  },
  "dependencies": {
    "@migptgui/controller": "^1.0.0",
    "@migptgui/server": "^1.0.0",
    "commander": "^12.1.0",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@hcfy/js-to-mjs": "^1.1.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.14.7",
    "typescript": "^5.5.2"
  }
}

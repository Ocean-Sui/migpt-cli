{
  "name": "migpt-server",
  "version": "1.0.0",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc -p tsconfig.build.json -m NodeNext && npm run cp-web",
    "dev": "tsc -m NodeNext",
    "dev:watch": "tsc -m NodeNext -w",
    "cp-web": "mkdir -p dist/web/ && cp -rf ../gui-web/dist/* dist/web/",
    "start": "node dist/index.js"
  },
  "bin": {
    "migpt-server": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@migptgui/server": "^1.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.4",
    "@types/node": "^20.14.7",
    "typescript": "^5.5.2"
  }
}
